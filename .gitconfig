[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX
[user]
	name = Tom Shen
	email = tom@shen.io
[push]
	default = simple
[alias]
    amend = commit --amend
    ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
    root = rev-parse --show-toplevel
[filter "lfs"]
    smudge = git-lfs smudge %f
    required = true
    clean = git-lfs clean %f
